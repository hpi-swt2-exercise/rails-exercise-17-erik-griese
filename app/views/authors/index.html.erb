<h1>Author List</h1>


<table>
  <tr>
    <th>Author Name:</th>
    <th>Homepage:</th>
    <th>Links:</th>
  </tr>

  <% @authors.each do |author| %>
    <tr>
      <td><%= author.name %></td>
      <td><%= author.homepage %></td>
      <td><%= link_to 'Show', author %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Add author', new_author_path %>
