<h1>Create new author</h1>

<%= form_for :author, url: authors_path do |form_instance| %>
  <p>
    <%= form_instance.label :first_name %>
    <%= form_instance.text_field :first_name %>
  </p>

  <p>
    <%= form_instance.label :last_name %>
    <%= form_instance.text_field :last_name %>
  </p>

  <p>
    <%= form_instance.label :homepage %>
    <%= form_instance.text_field :homepage %>
  </p>

  <p>
    <%= form_instance.submit %>
  </p>
<% end %>
	
